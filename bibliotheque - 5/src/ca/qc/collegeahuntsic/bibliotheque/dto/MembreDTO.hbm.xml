<?xml version="1.0"
      encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!--
   - MembreDTO mapping file.
   -
-->
<hibernate-mapping>
  <class name="ca.qc.collegeahuntsic.bibliotheque.dto.membreDTO"
  table="MEMBRE">
         <id name="idMembre"
             type="string">
             <column name="IDMEMBRE">
             </column>
             <generator class="sequence">
                        <param name="sequence">SEQ_ID_MEMBRE</param>
             </generator>
         </id>
   <property name="nom"
                   type="string"
                   length="100">
                   <column name="NOM">
                   </column>
         </property>
          <property name="telephone"
                   type="number"
                   length="10">
                   <column name="TELEPHONE">
                   </column>
         </property>
          <property name="limitePret"
                   type="number"
                   length="2">
                   <column name="LIMITEPRET">
                   </column>
         </property>
          <property name="nbPret"
                   type="number"
                   length="2">
                   <column name="NBPRET">
                   </column>
         </property>

		<set name = "pret"
			order-by="DATEPRET ASC"
			cascade="all">
			<key>
				<column name="IDMEMBRE">
				</column>
			</key>
			<one-to-many class="ca.qc.collegeahuntsic.bibliotheque.dto.PretDTO"/>
		</set>
		<set name = "reservation"
			order-by="DATERESERVATION ASC"
			cascade="all">
			<key>
				<column name="IDMEMBRE">
				</column>
			</key>
			<one-to-many class="ca.qc.collegeahuntsic.bibliotheque.dto.ReservationDTO"/>
		</set>
		</class>
</hibernate-mapping>